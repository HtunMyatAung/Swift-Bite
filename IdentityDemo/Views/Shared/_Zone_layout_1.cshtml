@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Home Page";
    ApplicationUser currentUser = await UserManager.GetUserAsync(User);
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Shop</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    @RenderSection("Shopidcss", required: false)
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        .header {
            background: #000;
            color: #fff;
            padding: 10px 0;
            position: -webkit-sticky;
            position: sticky;
            top: 0;
            z-index: 1000;
            width: 100%;
            display: flex;
            justify-content: space-between; /* Ensure space between logo and nav */
            align-items: center;
        }

        
        .logo {
            margin: 0;
            padding-left: 20px; /* Removed left padding for the logo */
        }

        .navbar {
            margin: 0; /* Adjust margin for positioning */
            padding-right: 20px; /* Adjust right padding for nav */
        }

        .nav-links {
            list-style: none;
            display: flex;
            flex-wrap: nowrap;
            margin: 0;
            padding: 0;
            align-items: center;
        }

            .nav-links li {
                font-size: 16px;
                margin-left: 30px;
                white-space: nowrap;
            }

            .nav-links a {
                text-decoration: none;
                transition: color 0.3s;
                /* Ensure link color matches header */
            }

        .nav-item.dropdown {
            display: flex;
            align-items: center;
            /* Center dropdown vertically */
        }

        .hero {
            background: url('hero.jpg') center/cover no-repeat;
            color: #fff;
            text-align: center;
            padding: 100px 0;
        }

            .hero h2 {
                font-size: 3em;
                margin-bottom: 20px;
            }

        .btn {
            display: inline-block;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background 0.3s;
        }

        .products {
            padding: 50px 0;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-gap: 20px;
        }

        .product {
            text-align: center;
        }

            .product img {
                width: 100%;
                border-radius: 5px;
                margin-bottom: 10px;
            }

        .footer {
            background: #000;
            color: #fff;
            text-align: center;
            padding: 20px 0;
            margin-top: 20px;
        }

        .user-image {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .dropdown-menu {
            position: absolute;
            top: 100%; /* Position the dropdown menu just below the dropdown item */
            right: 0; /* Align the right side of the dropdown menu with the right side of its parent */
            left: auto; /* Ensure no specific left positioning interferes */
            z-index: 1000;
            display: none; /* Initially hide the dropdown */
            min-width: 160px;
            padding: 8px 0;
            margin: 2px 0 0;
            font-size: 14px;
            text-align: left;
            background-color: #fff;
            border: 1px solid blue;
            border-radius: 5px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
            max-width: calc(100vw - 30px); /* Adjust as necessary */
        }


        .dropdown-item {
            display: block;
            width: 100%;
            padding: 10px 15px;
            clear: both;
            font-weight: 400;
            color: #000; /* Black text */
            background-color: #fff; /* White background */
            border: 0;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa; /* Example background color on hover */
                color: #007bff; /* Example text color on hover */
            }
    </style>
</head>
<body>
    <header class="header">
        
            <h1 class="logo">uab zone</h1>
            <nav class="navbar">
                <ul class="nav-links">
                    @*<li>@User.Identity.Name</li>*@
                    <li><a href="#" class="text-white">Home</a></li>
                    <li><a href="@Url.Action("HomePageItems","Item")" class="text-white">Shop</a></li>
                    <li><a href="@Url.Action("Privacy","Home")" class="text-white">about</a></li>
                    <li><a href="@Url.Action("Admin_user_list", "AdminControl")" class="text-white">Contact</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="nav-item dropdown">
                        <img src="~/dist/img/avatar.png" alt="User Image" class="user-image" id="userDropdownToggle">
                        <div class="dropdown-menu" id="userDropdownMenu">
                            @if (currentUser.Role == "Admin")
                            {
                                <a class="dropdown-item" href="/AdminControl/Admin_dashboard">Admin Dashboard</a>
                            }
                            else if (currentUser.Role == "Owner")
                            {
                                <a class="dropdown-item" href="/Shop/Owner_dashboard">Owner Dashboard</a>
                            }
                            else
                            {
                                <a class="dropdown-item" href="/Account/User_profile">Profile</a>
                            }
                            

                           
                            <div class="dropdown-divider"></div>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="dropdown-item">Logout</button>
                            </form>
                        </div>

                    </li>
                    }
                    else
                    {
                        
                        <li><a href="@Url.Action("Login", "Account")">Login</a></li>
                    }

                </ul>
            </nav>
        
    </header>
    @RenderBody()
    @RenderSection("Scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            // Toggle dropdown menu when clicking on user image
            $('#userDropdownToggle').click(function () {
                $('#userDropdownMenu').toggleClass('show');
            });

            // Close dropdown menu when clicking outside of it
            $(document).click(function (e) {
                if (!$(e.target).closest('.nav-item.dropdown').length) {
                    $('#userDropdownMenu').removeClass('show');
                }
            });

            // Prevent dropdown menu from closing when clicking inside it
            $('#userDropdownMenu').click(function (e) {
                e.stopPropagation();
            });
        });
    </script>


</body>
</html>

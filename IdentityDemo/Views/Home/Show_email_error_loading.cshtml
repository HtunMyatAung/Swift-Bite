@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error</title>
    <link href="~/css/download_css/4_5_3_bootstrap.min.css" rel="stylesheet" />
    <style>
        .error-container {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            background-color: #f8f9fa;
        }

            .error-container img {
                max-width: 80%;
                height: auto;
                object-fit: cover;
            }

        .error-message {
            max-width: 80%;
        }
    </style>
</head>
<body>
    <div class="container error-container">
        <div class="row">
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <img src="~/img/email_error.png" alt="Error Image" />
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <div class="error-message">
                    <h3>Fail to send email!</h3>
                    <p>We encountered an unexpected issue while trying to send the email. Please try again  or contact support if the issue persists.</p>
                    <a href="/Account/Register" class="btn btn-primary">Try again</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@model IdentityDemo.ViewModels.UpdateUserViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link href="~/css/download_css/4_5_3_bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css" />

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery Validation plugin -->
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/jquery.validate.min.js"></script>

    <!-- jQuery Validation Unobtrusive plugin -->
    <script src="https://cdn.jsdelivr.net/jquery.validation.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/download_js/4_5_3_bootstrap.min.js"></script>

    <style>
        .github-login-form {
            margin-top: 50px;
            padding: 30px;
            border: 1px solid #e1e4e8;
            border-radius: 6px;
            background-color: #fff;
        }

        .github-btn {
            padding: 10px 16px;
            font-size: 14px;
            width: 150px;
            font-weight: 600;
            color: #fff;
            background-color: black;
            border-color: rgba(27, 31, 35, 0.15);
            border-radius: 13px;
        }

            .github-btn:hover {
                font-weight: 650;
                color: white;
            }

        .text-danger {
            margin-top: 5px;
            font-size: 12px;
        }

        .form-group {
            border-radius: 20px;
        }

        .input-container {
            background-color: white;
            border: 1px solid black;
            border-radius: 15px;
            padding: 5px; /* Reduced padding for a smaller container */
            display: flex;
            flex-direction: column;
        }

        .input-label {
            margin-bottom: 5px;
            font-weight: bold;
            font-size: 12px; /* Smaller font size */
        }

        .input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

        .input-field {
            border: none;
            outline: none; /* Remove the border on focus */
            flex: 1;
            padding-right: 30px; /* Space for the eye icon */
            box-shadow: none; /* Ensure no shadow is applied */
            font-size: 18px; /* Smaller font size */
            background-color: transparent; /* Ensure background color doesn't cause border-like effect */
            font-weight:bold;
        }

            .input-field:focus {
                border: none; /* Ensure no border on focus */
                outline: none; /* Ensure no outline on focus */
                box-shadow: none; /* Ensure no shadow on focus */
                background-color: white;
            }

        .eye-icon {
            position: absolute;
            right: 10px;
            cursor: pointer;
            background: none;
            border: none;
        }

        /* Centering the button */
        .button-container {
            display: flex;
            justify-content: center;
            margin-top: 20px; /* Adjust as needed for spacing */
        }
    </style>
</head>
<body>
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-5 col-sm-8">
            <form asp-controller="Account" asp-action="ResetPassword" method="post" class="github-login-form" style="background-color:#D9D9D9;border-radius:20px;">
                <h3 class="text-center mb-5">Welcome! Reset Your Password</h3>
                <div class="form-group">
                    <div class="input-container">
                        <label asp-for="Email" class="input-label">Email</label>
                        <div class="input-wrapper">
                            <input type="email" class="form-control input-field" asp-for="Email" id="emailInput" />
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-container">
                        <label asp-for="NewPassword" class="input-label">New Password</label>
                        <div class="input-wrapper">
                            <input type="password" class="form-control input-field" asp-for="NewPassword" id="newPasswordInput" />
                            <i class="fas fa-eye-slash eye-icon" id="toggleNewPassword"></i>
                        </div>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-container">
                        <label asp-for="ConfirmPassword" class="input-label">Confirm New Password</label>
                        <div class="input-wrapper">
                            <input type="password" class="form-control input-field" asp-for="ConfirmPassword" id="confirmPasswordInput" />
                            <i class="fas fa-eye-slash eye-icon" id="toggleConfirmPassword"></i>
                        </div>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="button-container">
                    <button type="submit" class="btn btn-block github-btn">Change Password</button>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </form>
        </div>
    </div>

    <script>
        

        document.getElementById('toggleNewPassword').addEventListener('click', function () {
            const passwordInput = document.getElementById('newPasswordInput');
            const icon = document.getElementById('toggleNewPassword');
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            } else {
                passwordInput.type = "password";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            }
        });

        document.getElementById('toggleConfirmPassword').addEventListener('click', function () {
            const passwordInput = document.getElementById('confirmPasswordInput');
            const icon = document.getElementById('toggleConfirmPassword');
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            } else {
                passwordInput.type = "password";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            }
        });
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

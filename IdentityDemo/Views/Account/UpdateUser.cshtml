@model IdentityDemo.ViewModels.UpdateUserViewModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <style>
        .github-login-form {
            margin-top: 50px;
            padding: 30px;
            border: 1px solid #e1e4e8;
            border-radius: 6px;
            background-color: #fff;
        }

        .github-label {
            font-weight: 600;
            color: #24292e;
        }

        .github-input {
            margin-bottom: 16px;
            padding: 6px 8px;
            font-size: 14px;
            line-height: 20px;
            color: #24292e;
            background-color: #fafbfc;
            border: 1px solid #e1e4e8;
            border-radius: 6px;
            box-shadow: inset 0 1px 2px rgba(27, 31, 35, 0.075);
        }

            .github-input:focus {
                border-color: #0366d6;
                box-shadow: 0 0 0 3px rgba(3, 102, 214, 0.3);
                outline: none;
            }

        .github-btn {
            padding: 10px 16px;
            font-size: 14px;
            font-weight: 600;
            color: #fff;
            background-color: #28a745;
            border-color: rgba(27, 31, 35, 0.15);
            border-radius: 6px;
        }

            .github-btn:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .text-danger {
            margin-top: 5px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-controller="Account" asp-action="UpdateUser" method="post" class="github-login-form">
                <h1 class="text-center">Change Info</h1>
                <div class="form-group">
                    <label asp-for="UserName" class="github-label">Username</label>
                    <input type="text" class="form-control github-input" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="github-label">Email</label>
                    <input type="email" class="form-control github-input" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Useraddress" class="github-label">Address</label>
                    <input type="text" class="form-control github-input" asp-for="Useraddress" />
                    <span asp-validation-for="Useraddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserPhone" class="github-label">Phone</label>
                    <input type="text" class="form-control github-input" asp-for="UserPhone" />
                    <span asp-validation-for="UserPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Role" class="github-label">Role</label>
                    <select class="form-control github-input" asp-for="Role">
                        <option value="User">User</option>
                        <option value="Owner">Owner</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block github-btn">Submit</button>
                
            </form>
        </div>

    </div>
</body>
</html>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

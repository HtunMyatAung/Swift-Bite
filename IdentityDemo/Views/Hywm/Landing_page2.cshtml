@model IdentityDemo.ViewModels.ItemsViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css" />
    <title>Two Containers Layout</title>
    <link rel="stylesheet" href="~/css/hywm_css/Landing_page.css" />
    <style>
        body {
            font-family: 'Piazzolla', serif;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
        }

        .superleft {
            width: 7%;
            background-color: #B1454A;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .directiontext {
            writing-mode: vertical-rl;
            color: rgba(255, 255, 255, 0.1);
            font-weight: bold;
            font-size: 6rem;
            transform: rotate(180deg);
            position: absolute;
        }

        .left {
            width: 23%;
            background-color: #B1454A;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            padding-left: 20px;
            position: relative;
        }

        .foodtext {
            color: #fff;
            font-size: 1.5rem;
            margin-bottom: 1rem;
            position: relative;
            z-index: 2;
        }

        .food-img {
            position: absolute;
            z-index: 1;
        }

        .food1 {
            top: 5%;
            left: 50%;
            height: 150px;
            width: 150px;
        }

        .food2 {
            top: 25%;
            left: 75%;
            height: 200px;
            width: 200px;
        }

        .food3 {
            top: 50%;
            left: 40%;
            height: 220px;
            width: 220px;
        }

        .food4 {
            top: 72%;
            left: 80%;
            height: 170px;
            width: 170px;
        }

        .right {
            width: 70%;
            background-color: #F5F5F5;
            position: relative;
        }

        .leftdesign {
            padding-left: 15%;
            padding-bottom: 0;
            padding-right: 5%;
        }

        .foodtext1 {
            font-size: 2rem;
            color: white;
            margin-top: 10%;
        }

        .foodtext2 {
            font-size: 2rem;
            margin-top: 30%;
            color: white;
            margin-left: 30%;
        }

        .foodtext3 {
            font-size: 2rem;
            margin-top: 30%;
            color: white;
            margin-left: 10%;
        }

        .foodtext4 {
            font-size: 2rem;
            margin-top: 26%;
            color: white;
            margin-left: 5%;
        }

        .wefood {
            font-weight: bold;
        }

        .bestfood {
            font-weight: bold;
        }

        .signupbtn {
            margin-top: 0;
            padding: 10px 20px;
            font-size: 1.2rem; /* Adjusted this line */
            font-weight: bold;
        }

        .howtobtn {
            margin-left: 5%;
            margin-top: 0;
            font-weight: bold;
            font-size: 1.2rem; /* Adjusted this line */
            display: inline-flex;
            align-items: center;
        }

            .howtobtn .play-button {
                margin-right: 5px;
            }

        .lastpart {
            background-color: #D9D9D9;
            width: 100%;
            height: 20%;
            margin-top: 30px;
            display: flex;
            justify-content: center; /* Horizontally center */
            align-items: center; /* Vertically center */
        }

        .usercount {
            padding-left: 5%;
            margin: auto 0;
            font-size: 5rem;
        }

        .happycustomer {
            width: 40%;
            height: 80%;
            align-items: center;
        }

        .happy {
            padding-left: 10%;
            color: rgba(0,0,0,50%)
        }

        .vertical-line {
            border-left: 6px solid rgba(0,0,0,80%);
            height: 60%;
        }

        .lakanquot {
            padding-left: 10%;
            font-size: 1.4rem;
        }
    </style>
</head>
<body>
    <div class="container" id="homef">
        <div class="superleft">
            <p class="directiontext">NEARFOODS</p>
        </div>
        <div class="left">
            <p class="foodtext1">Breakfast</p>
            <img src="~/img/hywm_img/img/landingphoto/chicken-noodle-meatball-also-called-mie-ayam-popular-street-food-indonesia.png" alt="Breakfast" class="food-img food1 placeholder-image" />
            <p class="foodtext2">Lunch</p>
            <img src="~/img/hywm_img/img/landingphoto/1foods 2.png" alt="Lunch" class="food-img food2 placeholder-image" />
            <p class="foodtext3">Fries</p>
            <img src="~/img/hywm_img/img/landingphoto/concept-tasty-food-with-chicken-strips-space-text.png" alt="Fries" class="food-img food3 placeholder-image" />
            <p class="foodtext4">Traditional foods</p>
            <img src="~/img/hywm_img/img/landingphoto/top-view-japanese-sushi-assortment.png" alt="Traditional foods" class="food-img food4 placeholder-image" />
        </div>
        <div class="right">
            <div class="nav-buttons">
                <img src="~/img/hywm_img/items/logo1.png" alt="Logo" style="width:60px;height:60px;">
                <button id="home-button" onclick="scrollToSection('home', this)" class="active">Home</button>
                <button id="restaurants-button" onclick="scrollToSection('restaurants', this)">Restaurants</button>
                <button id="food-button" onclick="scrollToSection('food', this)">Food</button>
                <button id="about-button" onclick="location.href='@Url.Action("About","Home")'">About Us</button>
                @if (User.Identity.IsAuthenticated)
                {
                    <button id="login-button" onclick="location.href='@Url.Action("User_profile","Hywm")'" style="background-color:dimgray;border-radius:15px;">Profile</button>
                }
                else
                {
                    <button id="login-button" onclick="location.href='@Url.Action("Login","Account")'" style="background-color:dimgray;border-radius:15px;">Log In</button>
                    
                }
                
            </div>
            <div class="leftdesign">
                <p class="wefood" style="font-size: 2rem;">We provide the</p>
                <p class="bestfood" style="font-size: 4rem;">Best Food for You</p>
                <p style="font-size: 1.5rem;">Feel the taste of most popular foods from anywhere and anytime. Experience the culinary delights that transcend borders, bringing you a taste of global cuisine at your convenience.</p>
               @if(!User.Identity.IsAuthenticated){
                <button id="login-button" onclick="location.href='@Url.Action("Register","Account")'" class="btn btn-dark signupbtn rounded-pill">SIGN UP</button>

               }
               
                <a href="#" class="btn howtobtn">
                    <i class="fas fa-play-circle play-button"></i>
                    How to Order
                </a>
            </div>
            <div class="lastpart">
                <div class="d-flex happycustomer">
                    <p class="usercount">5K+</p>
                    <p class="happy" style="font-size: 1.5rem;">Happy <br /> Customer</p>
                </div>
                <div class="vertical-line"></div>
                <div class="d-flex happycustomer">
                    <img src="~/img/hywm_img/img/landingphoto/Ellipse 8.png" alt="Alternate Text" height="50" style="padding-left: 20%;" />
                    <p class ="lakanquot">
                        &quot; <span>
                            This is the best foods
                            website that ever exist
                        </span>&quot;
                    </p>
                </div>

            </div>
        </div>
    </div>
    <div id="restaurants" class="restaurants_slider">
        <p><h3>Trending Restaurants in NearFoods</h3></p>
        <div class="slider" onwheel="handleWheel(event)" ontouchstart="handleTouchStart(event)" ontouchmove="handleTouchMove(event)">
            <div class="slide-container">
                @foreach(var shop in Model.Shops)
                {
                    <div class="slide">
                        <img src="~/img/shop/@shop.ProfileImagePath" alt="@shop.ShopName">
                    </div>
                }
               
                <!-- Add more slide divs as needed -->
            </div>
        </div>
    </div>

    <div id="food" class="food_list">
        <p><h3>Various Foods in NearFoods</h3></p>
        <div class="food_items">
            @foreach (var item in Model.Items)
            {
                <div class="food_item">
                    <div class="food_overlay">
                        <img class="small_image" src="~/img/items/@item.ItemImageName" alt="Small Background">
                        <div class="text_bg_container">
                            <img class="text_bg" src="~/img/hywm_img/items/Item_text_bg.png" alt="Text Background">
                            <span class="food_name">@item.ItemName</span>
                        </div>
                    </div>
                    
                </div>
               

            }
        </div>
    </div>

    <!--footer-->
    <footer class="footer">
        <div class="footer-column">
            <img src="~/img/hywm_img/items/logo1.png" alt="Near Food Logo">
            <h3>Near Foods</h3>
        </div>
        <div class="footer-column">
            <h3>Follow Us</h3>
            <div class="footer-icons">
                <a href="#" target="_blank" rel="noopener noreferrer"><i class="fab fa-facebook-f">a</i></a>
                <a href="#" target="_blank" rel="noopener noreferrer"><i class="fab fa-instagram">a</i></a>
                <a href="#" target="_blank" rel="noopener noreferrer"><i class="fab fa-twitter">a</i></a>
            </div>
        </div>
        <div class="footer-column">
            <h3>Get Help</h3>
            <ul>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">How to Order</a></li>
            </ul>
        </div>
        <div class="footer-column">
            <h3>Terms</h3>
            <ul>
                <li><a href="#">Terms and Conditions</a></li>
                <li><a href="#">Be Our Partner</a></li>
            </ul>
        </div>
    </footer>
    <script>
        function scrollToSection(sectionId, button) {
            document.getElementById(sectionId).scrollIntoView({ behavior: 'smooth' });
            setActiveButton(button);
        }

        function setActiveButton(button) {
            const buttons = document.querySelectorAll('.nav-buttons button');
            buttons.forEach(btn => btn.classList.remove('active'));
            button.classList.add('active');
        }</script>
</body>
</html>

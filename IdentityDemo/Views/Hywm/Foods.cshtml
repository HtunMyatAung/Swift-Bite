        .hoveffect {
            position: relative;
            display: block;
            width: 50px;
            height: 50px;
            text-align: center;
            font-size: 30px;
            color: #666;
            transition: .5s;
        }

            .hoveffect::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: blue;
                transition: .5s;
                transform: scale(.9);
                z-index: -1;
            }

            .hoveffect:hover::before {
                transform: scale(1);
            }

            .hoveffect:hover {
                color: blue;
                text-shadow: 0 0 5px blue;
            }

        .menu-item1 .heart-button {

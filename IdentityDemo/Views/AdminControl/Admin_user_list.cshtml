
@model IEnumerable<IdentityDemo.Models.ApplicationUser>
@{
    Layout = "_Admin_layout";
    int counter = 1;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Table</title>
    <!-- DataTables CSS -->
    @section Scripts {
        <!-- DataTables CSS -->
        <link rel="stylesheet" href="~/css/download_css/5_2_3_bootstrap.min.css" />

        <link rel="stylesheet" href="~/css/download_css/4_5_3_bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="~/css/download_css/1_10_24_jquery.dataTables.min.css" />
        <link href="~/css/download_css/sb_1_7_1_datatables.min.css" rel="stylesheet" />
        <link href="~/css/download_css/sb_1_7_1_datatables.min.css" rel="stylesheet" />
        <!-- jQuery -->
        <script src="~/js/download_js/3_5_1_jquery.min.js"></script>
        <!-- DataTables JS -->
        <script type="text/javascript" src="~/js/download_js/1_10_24_jquery.dataTables.min.js"></script>

        <script src="~/js/download_js/sb_1_7_1_datatables.min.js"></script>
        <script src="~/js/download_js/5_2_3_bootstrap.bundle.min.js"></script>
        <script>
            // Initialize DataTable
            $(document).ready(function () {
                $('#userlisttable').DataTable();
            });


                    let currentItemId;

                    function setuserId(userId) {
                        currentuserId = userId;
                    }

                    document.getElementById('confirmDeleteButton').addEventListener('click', function () {
                        document.getElementById('deleteUserForm-' + currentuserId).submit();
                    });

        </script>       
    }
</head>
<body>
    <div style="padding-top: 2%;">
        <table id="userlisttable" class="display" style="width:100%">
            <thead>
                <tr style="text-align: center;">
                    <th style="text-align: center;">No.</th>
                    <th style="text-align: center;">Name</th>
                    <th style="text-align: center;">Phone</th>
                    <th style="text-align: center;">Role</th>
                    <th style="text-align: center;">Email</th>
                    <th style="text-align: center;">Address</th>
                    <th style="text-align: center;">Action</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr style="text-align: center;">
                        <td style="text-align: center;">@counter</td>
                        <td style="text-align: center;">@user.UserName</td>
                        <td style="text-align: center;">@user.PhoneNumber</td>
                        <td style="color:@(user.Role == "User" ? "green" : user.Role == "Owner" ? "black" : "black"); text-align: center;">
                            <span style="background-color: lightgray; padding: 2px; border-radius: 4px; display: inline-block;">
                                @user.Role
                            </span>
                            
                        </td>

                        <td style="text-align: center;">@user.Email</td>
                        <td style="text-align: center;">@user.Address</td>
                        <td style="text-align: center;" style="text-align: center;">
                            <a href="@Url.Action("Admin_update_user_info", "AdminControl", new { userId = user.Id })" class="btn btn-link">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form id="deleteUserForm-@user.Id" asp-controller="AdminControl" asp-action="DeleteUser" method="post" style="display:inline;">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="button" class="btn btn-link" style="color:red" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" onclick="setuserId('@user.Id')">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>
                        </td>
                        
                    </tr>
                    counter += 1;
                    <!-- Add more rows with data as needed -->
                }
            </tbody>
        </table>
    </div>

    <!-- Modal for user delete Confirmation -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this user?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

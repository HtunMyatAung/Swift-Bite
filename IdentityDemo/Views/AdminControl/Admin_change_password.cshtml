@model IdentityDemo.ViewModels.UpdateUserViewModel
@{
    Layout = "_Admin_layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <style>
        .github-login-form {
            margin-top: 50px;
            padding: 30px;
            border: 1px solid #e1e4e8;
            border-radius: 6px;
            background-color: #fff;
        }

        .github-label {
            font-weight: 600;
            color: #24292e;
        }

        .github-input {
            margin-bottom: 16px;
            padding: 6px 8px;
            font-size: 14px;
            line-height: 20px;
            color: #24292e;
            background-color: #fafbfc;
            border: 1px solid #e1e4e8;
            border-radius: 6px;
            box-shadow: inset 0 1px 2px rgba(27, 31, 35, 0.075);
        }

            .github-input:focus {
                border-color: #0366d6;
                box-shadow: 0 0 0 3px rgba(3, 102, 214, 0.3);
                outline: none;
            }

        .github-btn {
            padding: 10px 16px;
            font-size: 14px;
            font-weight: 600;
            color: #fff;
            background-color: #28a745;
            border-color: rgba(27, 31, 35, 0.15);
            border-radius: 6px;
        }

            .github-btn:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .text-danger {
            margin-top: 5px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="row justify-content-center">
        <div class="col-md-7">
            <form asp-controller="AdminControl" asp-action="Admin_change_password" method="post" class="github-login-form" id="changePasswordForm">
                <h1 class="text-center">Change Password</h1>
                <div class="form-group">
                    <label asp-for="OldPassword" class="github-label">Old Password</label>
                    <input type="password" class="form-control github-input" asp-for="OldPassword" id="oldPassword" />
                    <span asp-validation-for="OldPassword" class="text-danger" id="oldPasswordError"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="github-label">New Password</label>
                    <input type="password" class="form-control github-input" asp-for="NewPassword" id="newPassword" />
                    <span asp-validation-for="NewPassword" class="text-danger" id="newPasswordError"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="github-label">Confirm New Password</label>
                    <input type="password" class="form-control github-input" asp-for="ConfirmPassword" id="confirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger" id="confirmPasswordError"></span>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary github-btn" id="submitButton">Change Password</button>
                </div>
            </form>
            <script src="~/js/validateChangePassword.js"></script>
        </div>

    </div>
</body>
</html>


@model IdentityDemo.ViewModels.UpdateUserViewModel
@{
    Layout = "_Admin_layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <style>
        body{
            background-color: #45a049;
        }
        .github-login-form {
            margin-top: 50px;
            padding: 30px;
            border: 1px solid #e1e4e8;
            border-radius: 6px;
            background-color: #fff;
        }

        .github-label {
            font-weight: 600;
            color: #24292e;
        }

        .github-input {
            margin-bottom: 16px;
            padding: 6px 8px;
            font-size: 14px;
            line-height: 20px;
            color: #24292e;
            background-color: #fafbfc;
            border: 1px solid #e1e4e8;
            border-radius: 6px;
            box-shadow: inset 0 1px 2px rgba(27, 31, 35, 0.075);
        }

            .github-input:focus {
                border-color: #0366d6;
                box-shadow: 0 0 0 3px rgba(3, 102, 214, 0.3);
                outline: none;
            }

        .github-btn {
            padding: 10px 16px;
            font-size: 14px;
            font-weight: 600;
            color: #fff;
            background-color: #218838;
            border-color: rgba(27, 31, 35, 0.15);
            border-radius: 6px;
        }

            .github-btn:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .text-danger {
            margin-top: 5px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="row justify-content-center" style="background-color:white">
        <div class="col-md-7">
            <form asp-controller="AdminControl" asp-action="Admin_update_user_info" method="post" class="github-login-form">
                <h1 class="text-center">Change User Info</h1>
                <input type="hidden" asp-for="Id" />
                <div class="form-group row mb-3">
                    <label asp-for="UserName" class="github-label col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control github-input" asp-for="UserName" readonly/>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="Email" class="github-label col-sm-2">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control github-input" asp-for="Email" readonly/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="Useraddress" class="github-label col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control github-input" asp-for="Useraddress" readonly/>
                        <span asp-validation-for="Useraddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="UserPhone" class="github-label col-sm-2 col-form-label">Phone</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control github-input" asp-for="UserPhone" readonly/>
                        <span asp-validation-for="UserPhone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="Role" class="github-label col-sm-2 col-form-label">Role</label>
                    <div class="col-sm-10">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="inlineRadio1" asp-for="Role" value="User">
                            <label class="form-check-label" for="inlineRadio1">User</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="inlineRadio2" asp-for="Role" value="Owner">
                            <label class="form-check-label" for="inlineRadio2">Owner</label>
                        </div>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-block github-btn">Submit</button>

            </form>
        </div>

    </div>
</body>
</html>
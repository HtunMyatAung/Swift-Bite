@model IdentityDemo.ViewModels.CategoryListViewModel
@{
    Layout = "_Admin_layout";
    int counter = 1;
    var error = TempData["error_category"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/download_css/1_10_24_jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/download_css/5_2_3_bootstrap.min.css" />
    <script src="~/js/download_js/5_2_3_bootstrap.bundle.min.js"></script>
    <style>
        .github-login-form {
            margin-top: 50px;
            padding: 30px;
            border: 1px solid #e1e4e8;
            border-radius: 6px;
            background-color: #fff;
        }

        .github-label {
            font-weight: 600;
            color: #24292e;
        }

        .github-input {
            margin-bottom: 16px;
            padding: 6px 8px;
            font-size: 14px;
            line-height: 20px;
            color: #24292e;
            background-color: #fafbfc;
            border: 1px solid #e1e4e8;
            border-radius: 6px;
            box-shadow: inset 0 1px 2px rgba(27, 31, 35, 0.075);
        }

            .github-input:focus {
                border-color: #0366d6;
                box-shadow: 0 0 0 3px rgba(3, 102, 214, 0.3);
                outline: none;
            }

        .github-btn {
            padding: 10px 16px;
            font-size: 14px;
            font-weight: 600;
            color: #fff;
            background-color: #28a745;
            border-color: rgba(27, 31, 35, 0.15);
            border-radius: 6px;
        }

            .github-btn:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .text-danger {
            margin-top: 5px;
            font-size: 12px;
        }
        .catinput{
            border-radius: 3px;
            border-color: gray;
            border-width: 0.9px;
            background-color: transparent;
            width: 190px; 
            height: 35px;
        }
    </style>
</head>
<body>
    <form method="post" asp-action="Admin_add_category" asp-controller="AdminControl">
        <div class="d-flex justify-content-between">
            <h3>Category List</h3>
            <div class="d-flex flex-row-reverse">
                <div class="py-2 pl-2">
                    <input id="category_name" name="category_name" type="text" required class="catinput"/>
                </div>
                <div class="p-2">
                    <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-plus fa-sm"></i> Add</button>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <label style="color:red; margin-right:20px"><small>@error</small></label>
        </div>
        
    </form>
    <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
        <table id="shoptable" class="display" style="width:100%">
            <thead>
                <tr style="text-align: center;">
                    <th>ID</th>
                    <th>Name</th>
                    <th>Items Count</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.List)
                {
                    <tr style="text-align: center;">
                        <td>@counter</td>
                        <td>@category.Name</td>
                        <td>@category.Item_count</td>
                        <td>
                            <form id="deleteCategoryForm-@category.Id" asp-action="DeleteCategory" asp-controller="AdminControl" method="post">
                                <input type="hidden" name="categoryid" value="@category.Id" />
                                <button type="button" class="btn btn-link" style="color:red" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" onclick="setCategoryId('@category.Id')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>

                    </tr>
                    counter += 1;
                    <!-- Add more rows with data as needed -->
                }
            </tbody>
        </table>
    </div>
    <!-- Modal for delete Confirmation -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this item?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>                    
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/js/download_js/3_5_1_jquery.min.js"></script>
    <!-- DataTables JS -->
    <script type="text/javascript" src="~/js/download_js/1_10_24_jquery.dataTables.min.js"></script>
    <script>
        // Initialize DataTable
        $(document).ready(function () {
            $('#shoptable').DataTable();
        });

        let currentCategoryId;

        function setCategoryId(categoryId) {
            currentCategoryId =categoryId;
        }

        document.getElementById('confirmDeleteButton').addEventListener('click', function () {
            document.getElementById('deleteCategoryForm-' + currentCategoryId).submit();
        });

    </script>
</body>
</html>


@model IdentityDemo.ViewModels.ItemsViewModel
@{
    Layout = "_Zone_layout";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/IdentityDemo.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="~/js/download_js/3_5_1_jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div class="container-fluid">
    
    <div class="row">
        @foreach (var item in Model.Items)
        {
            var shop = Model.Shops.FirstOrDefault(s => s.ShopId == item.Shop_Id);
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-img-container">
                        <img src="~/img/bg2.jpg" class="card-img-top product-image" alt="Product Image">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.ItemName</h5>
                        <p class="card-text">
                        <a href="@Url.Action("ItemByShopid", "Item", new { shopId = shop.ShopId })">
                            <i class="fas fa-store"></i> Shop :@shop.ShopName
                            </a>
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-secondary" onclick="decrementQuantity(@item.ItemId)">-</button>
                                <span id="quantity-display-@item.ItemId" class="px-2">1</span>
                                <button type="button" class="btn btn-outline-secondary" onclick="incrementQuantity(@item.ItemId)">+</button>
                                <button type="button" class="btn btn-outline-primary ml-2" onclick="prepareBuyItem(@item.ItemId, '@item.ItemName', '@item.ItemPrice')">Buy</button>
                            </div>
                            <div>
                                @*<small class="text-muted"><s>$@item.ItemPrice</s></small>*@
                                <small class="text-muted">$@item.ItemChangedPrice</small>
                            </div>
                        </div>
                        <input type="hidden" id="quantity-@item.ItemId" value="1" />
                    </div>
                </div>
            </div>
        }
    </div>
    <form id="buyItemForm" method="post" action="@Url.Action("Invoice", "Account")" style="display:none;">
        <input type="hidden" name="selectedItems[0].Key" id="selectedItemId" />
        <input type="hidden" name="selectedItems[0].Value" id="selectedItemQuantity" />
    </form>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="buyItemModal" tabindex="-1" role="dialog" aria-labelledby="buyItemModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="buyItemModalLabel">Confirm Purchase</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>You are about to buy:</p>
                <p><strong>Item ID:</strong> <span id="modalItemId"></span></p>
                <p><strong>Item Name:</strong> <span id="modalItemName"></span></p>
                <p><strong>Item Price:</strong> $<span id="modalItemPrice"></span></p>
                <p>Quantity: <span id="modalItemQuantity"></span></p>
                <p>Do you want to proceed?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" onclick="submitBuyItem()">Confirm Purchase</button>
            </div>
        </div>
    </div>
</div>




<script>
    function incrementQuantity(itemId) {
        var quantityElement = document.getElementById('quantity-' + itemId);
        var quantityDisplay = document.getElementById('quantity-display-' + itemId);
        var quantity = parseInt(quantityElement.value);
        quantityElement.value = quantity + 1;
        quantityDisplay.innerText = quantity + 1;
    }

    function decrementQuantity(itemId) {
        var quantityElement = document.getElementById('quantity-' + itemId);
        var quantityDisplay = document.getElementById('quantity-display-' + itemId);
        var quantity = parseInt(quantityElement.value);
        if (quantity > 1) {
            quantityElement.value = quantity - 1;
            quantityDisplay.innerText = quantity - 1;
        }
    }

    function prepareBuyItem(itemId, itemName, itemPrice) {
        var isAuthenticated = @User.Identity.IsAuthenticated.ToString().ToLower();
        if (!isAuthenticated) {
            alert("Please log in to add items to the cart.");
            // You can redirect to login page if needed
            // window.location.href = '@Url.Action("Login", "Account")';
            return;
        }

        // Update modal with item details
        document.getElementById('modalItemId').innerText = itemId;
        document.getElementById('modalItemName').innerText = itemName;
        document.getElementById('modalItemPrice').innerText = itemPrice;

        var quantity = document.getElementById('quantity-' + itemId).value;
        document.getElementById('modalItemQuantity').innerText = quantity;

        // Set the hidden form fields with the item ID and quantity
        document.getElementById('selectedItemId').value = itemId;
        document.getElementById('selectedItemQuantity').value = quantity;
        // Show the modal
        $('#buyItemModal').modal('show');
    }

    function submitBuyItem() {
        var itemId = document.getElementById('modalItemId').innerText;
        var quantity = document.getElementById('modalItemQuantity').innerText;

        

        // Submit the form
        document.getElementById('buyItemForm').submit();

        // Close the modal
        $('#buyItemModal').modal('hide');
    }
</script>

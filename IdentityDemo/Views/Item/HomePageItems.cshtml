@model IdentityDemo.ViewModels.ItemsViewModel
@{
    Layout = "_Zone_layout";
    int counter = 1;
}
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/custom_css/allitemlist.css" rel="stylesheet"/>
<style>
    .itemhorizontal::-webkit-scrollbar{
        width: 0;
    }
</style>

<section class="py-5">
    <div class="container">
        <div id="carouselExampleControls" class="carousel slide carousel-dark" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                <li data-bs-target="#carouselExampleControls" data-bs-slide-to="0" class="active"></li>
                @{
                   
                    foreach (var shop in Model.Shops)
                    {
                        <li data-bs-target="#carouselExampleControls" data-bs-slide-to="@counter"></li>
                        counter++;
                    }
                }
            </ol>

            <div class="carousel-inner">
                <div class="carousel-item active">
                   <img style="width:1100px" src="~/img/welcome_top.png" />
                </div>
                @foreach (var shop in Model.Shops)
                {
                    <div class="carousel-item">
                        <div class="row">
                            <div class="col-md-8">
                                <img src="~/img/shop/@shop.ProfileImagePath" class="d-block w-100 rounded" alt="...">
                            </div>
                            <div class="col-md-4 d-flex flex-column justify-content-center">
                                <div>
                                    <h5>@shop.ShopName</h5>
                                    <p>Phone: @shop.ShopPhone</p>
                                    <p>Address: @shop.ShopAddress</p>
                                    <a href="@Url.Action("ItemByShopid", "Item", new { shopId = shop.ShopId })" class="btn btn-outline-secondary rounded">See Detail >></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

    </div>

</section>

<div class="container-fluid mt-4">
    @foreach (var categoryname in Model.Categories)
    {
        
        var itemsInCategory = Model.Items.Where(item => item.Category == categoryname).ToList();

        
        if (itemsInCategory.Any())
        {
            <div class="my-3">
                <h3 style="color:black;font-size:40px;" >@categoryname ></h3>
            </div>
            <div class="row justify-content-start flex-nowrap overflow-auto itemhorizontal">
                @foreach (var item in itemsInCategory)
                {
                    var shop = Model.Shops.FirstOrDefault(s => s.ShopId == item.Shop_Id);
                    <div class="col-lg-2 col-md-3 col-sm-6 mb-4">
                        <div class="card shadow-sm h-100">
                            <div class="img-box">
                                <img src="~/img/items/@item.ItemImageName" class="card-img-top" alt="@item.ItemName">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@item.ItemName</h5>
                                <div class="d-flex justify-content-between">
                                    <p class="card-text">MMK</p>
                                    <p class="card-text"> @item.ItemChangedPrice</p>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <a href="@Url.Action("ItemByShopid", "Item", new { shopId = item.Shop_Id })" class="btn btn-secondary btn-sm w-50">Get</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>


<script src="~/js/Allitemlistbuy.js"></script>

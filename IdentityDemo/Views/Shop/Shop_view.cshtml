@model IdentityDemo.ViewModels.ItemsViewModel
@{
    Layout = "_owner_layout";
    var isitem = TempData["items"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Overlay Text on Image with Blur</title>
    <style>
        .main-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            width: 100%;
        }

        .card {
            position: relative;
            height: 400px;
            width: 200px;
            border-radius: 15px;
            margin: 15px; /* Ensure margin around each card */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: transform 0.3s ease;
            z-index: 1;
        }

            .card:hover {
                transform: scale(1.1); /* Scale the card on hover */
                z-index: 100; /* Ensure the hovered card appears on top */
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.2); /* Optional: Add a shadow for emphasis */
            }

        .img-box {
            height: 320px;
            align-content: center;
        }

        .card img {
            width: 100%;
            height: 100%; /* Ensures image fits container height */
            object-fit: fill;
            border-radius: 15px 15px 0 0;
        }

        .card-body {
            padding: 1.35rem;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            height: 80px; /* Ensures card body fills available space */
        }

        .card-title {
            font-size: 13px;
            margin-bottom: 5px; /* Adjust margin between title and text */
            height: 10px; /* Ensures text height fits dynamically */
        }

        .card-text {
            font-size: 13px;
            margin-bottom: 5px; /* Adjust margin between text and buttons */
            height: 10px; /* Ensures text height fits dynamically */
        }

        .shop-name {
            margin-bottom: 8px; /* Add margin below shop name */
        }

        /* Ensure row elements are separated */
        .row > .col-lg-2,
        .row > .col-md-3,
        .row > .col-sm-6 {
            padding: 15px; /* Add padding around columns */
        }
    </style>
</head>
<body>
    @if (isitem != null)
    {
        <div class="main-container">
            <img src="~/img/no_item.png" style="width:100%;height:90vh;align:center;" />
        </div>
    }
    else
    {
        <div class="main-container pt-4">
            <div class="container-fluid">
                <div class="row justify-content-start">
                    @foreach (var item in Model.Items)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-6 mb-4">
                            <div class="card shadow-sm" data-itemid="@item.ItemId"
                                 data-final_price="@item.ItemPrice"
                                 data-itemquantity="@item.ItemQuantity" data-discount_rate="@item.Discount_rate" data-discount_price="@item.Discount_price">
                                <div class="img-box">
                                    <img src="~/img/items/@item.ItemImageName" class="card-img-top" alt="@item.ItemName">
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <h5 class="card-title">Name:</h5>
                                        <p class="card-text">@item.ItemName</p>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title">Price:</h5>
                                        <p class="card-text">@item.ItemChangedPrice MMK</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <script src="~/js/download_js/jquery-3.6.0.min.js"></script>
    <script src="~/js/download_js/4_5_3_bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            // Select all elements with class "card"
            $('.card').each(function () {
                var card = $(this);

                // Event listener for when mouse enters (hover)
                card.on('mouseenter', function () {
                    var itemQuantity = card.data('itemquantity');
                    var discountRate = card.data('discount_rate');
                    var discountPrice = card.data('discount_price');
                    var finalPrice = card.data('final_price');

                    // Determine which discount value to display
                    var discountValue = (discountRate !== 0) ? `${discountRate}%` : `${discountPrice}MMK`;

                    // Create the content to be added
                    var detailsContent = `
                                <div class="get-details">
                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title">Start Price:</h5>
                                        <p class="card-text">${finalPrice}MMK</p>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title get-button">Quantity:</h5>
                                        <p class="card-text get-button">${itemQuantity}</p>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title get-button">Discount:</h5>
                                        <p class="card-text get-button">${discountValue}</p>
                                    </div>
                                </div>
                            `;

                    // Append the content to the card-body
                    card.find('.card-body').append(detailsContent);
                    card.find('.img-box').css('height', '250px');
                    card.find('.card-body').css('height', '150px');
                    card.find('.card').css('width', '350px');
                });

                // Event listener for when mouse leaves (hover out)
                card.on('mouseleave', function () {
                    // Remove the added content when mouse leaves
                    card.find('.get-details').remove();
                    card.find('.img-box').css('height', '320px');
                    card.find('.card-body').css('height', '80px');
                    card.find('.card').css('width', '1000px');
                });
            });
        });
    </script>
</body>
</html>

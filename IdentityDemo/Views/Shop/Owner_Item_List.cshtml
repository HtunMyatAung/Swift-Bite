@model List<IdentityDemo.Models.ItemModel>

@{
    Layout = "_Owner_layout";
    ViewData["Title"] = "Home Page";
    int counter = 1;
}
@section Scripts {
    <link rel="stylesheet" href="~/css/download_css/5_2_3_bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/download_css/4_5_3_bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/download_css/1_10_24_jquery.dataTables.min.css" />
    <!-- jQuery -->
    <script src="~/js/download_js/3_5_1_jquery.min.js"></script>
    <!-- DataTables JS -->
    <script type="text/javascript" src="~/js/download_js/1_10_24_jquery.dataTables.min.js"></script>
    <link href="~/css/download_css/sb_1_7_1_datatables.min.css" rel="stylesheet" />
    <script src="~/js/download_js/sb_1_7_1_datatables.min.js"></script>
    <script src="~/js/download_js/5_2_3_bootstrap.bundle.min.js"></script>
    <script>
        // Initialize DataTable
        $(document).ready(function () {
            $('#shoptable').DataTable();
        });
        $(document).ready(function () {
            $('#example1').DataTable({
                responsive: true,
                lengthChange: false,
                autoWidth: false,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search...",
                }
            });
        });

        function openPopup(itemName, itemPrice, itemQuantity, finalprice, updatedDate, itemImageName) {
            // Set the text content of the modal
            $('#modalItemName').text(itemName);
            $('#modalItemPrice').text(itemPrice+" MMK");
            $('#modalItemQuantity').text(itemQuantity);
            $('#modalFinalPrice').text(finalprice+" MMK");
            $('#modalUpdatedDate').text(new Date(updatedDate).toLocaleString());

            // Set the image source
            $('#modalImage').attr('src', '/img/items/' + itemImageName);

            // Show the modal
            $('#popup').modal('show');
        }
        function closePopup() {
            $('#popup').modal('hide');
        }


        let currentItemId;

        function setItemId(itemId) {
            currentItemId = itemId;
        }

        document.getElementById('confirmDeleteButton').addEventListener('click', function () {
            document.getElementById('deleteItemForm-' + currentItemId).submit();
        });
        

    </script>
}
<style>
    #shoptable th, #shoptable td {
        text-align: center;
        vertical-align: middle;
    }

    #shoptable .d-flex {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        #shoptable .d-flex a,
        #shoptable .d-flex form {
            margin: 0 10px; /* Adjust the value to control the spacing */
        }

        #shoptable .d-flex i {
            font-size: 1.2em; /* Adjust icon size if needed */
        }

    #shoptable .btn-link {
        padding: 0;
        border: none;
        background: none;
    }
</style>



<div class="d-flex justify-content-between">
    <h1 style="color: black">Items</h1>
    @foreach (var item in Model)
    {
        ViewBag.id = item.Shop_Id;
    }
    <div class="my-auto">
    <a href="@Url.Action("CreateItem","Item",new{shopid = @ViewBag.id})" class="btn btn-primary" ><i class="fa fa-circle-plus" ></i> New Item</a>
    </div>
</div>
<table id="shoptable" class="display" style="width:100%;">
    <thead>
        <tr style="text-align: center;">
            <th style="text-align:center;">No.</th>
            <th style="text-align:center;">Name</th>
            <th style="text-align:center">Category</th>
            <th style="text-align:center;">Price</th>
            <th style="text-align:center;">Quantity</th>
            <th style="text-align:center;">Discount Price</th>
            <th style="text-align:center;">
                <div class="d-flex justify-content-around">
                    <span>Edit</span>
                    <span>View</span>
                    <span>Delete</span>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center;">
                <td style="text-align:center;">@counter</td>
                <td style="text-align:center;">@item.ItemName</td>
                <td style="text-align:center">@item.Category</td>
                <td style="text-align:center;">@item.ItemPrice</td>
                <td style="text-align:center;">@item.ItemQuantity</td>
                <td style="text-align:center;">@item.ItemChangedPrice</td>
                <td style="text-align:center;">
                    <div class="d-flex justify-content-around">
                        <a href="@Url.Action("UpdateItem", "Item", new { itemid = @item.ItemId })">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a onclick="openPopup('@item.ItemName', '@item.ItemPrice', '@item.ItemQuantity', '@item.ItemChangedPrice', '@item.ItemUpdatedDate','@item.ItemImageName')" href="#">
                            <i class="fas fa-eye"></i>
                        </a>
                        <form id="deleteItemForm-@item.ItemId" asp-action="DeleteItem" asp-controller="Item" method="post">
                            <input type="hidden" name="itemid" value="@item.ItemId" />
                            <button type="button" class="btn btn-link" style="color:red" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" onclick="setItemId('@item.ItemId')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
            counter += 1;
        }
    </tbody>
</table>



<!-- Modal for delete Confirmation -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap Modal for showing item info -->
<div class="modal fade" id="popup" tabindex="-1" role="dialog" aria-labelledby="buyItemModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="buyItemModalLabel">Item Details</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div style="text-align:center">
                    <img id="modalImage" src="" alt="Item Image" style="max-width: 100%; max-height: 200px;" />
                </div>
                <table>
                    <tr>
                        <th><strong>Item Name:</strong></th>
                        <td style=" margin-left:100px;"><span id="modalItemName"></span></td>
                    </tr>
                    <tr>
                        <th><strong>Price:</strong></th>
                        <td style="margin-left:10px;"> <span id="modalItemPrice"></span></td>
                    </tr>
                    <tr>
                        <th><strong>Quantity:</strong></th>
                        <td style="margin-left:10px;"><span id="modalItemQuantity"></span></td>
                    </tr>
                    <tr>
                        <th><strong>Final Price:</strong></th>
                        <td style="margin-left:10px;"><span id="modalFinalPrice"></span></td>
                    </tr>
                    <tr>
                        <th><strong>Updated Date:</strong></th>
                        <td style="margin-left:10px;"><span id="modalUpdatedDate"></span></td>
                    </tr>
                </table>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Ok</button>

            </div>
        </div>
    </div>
</div>



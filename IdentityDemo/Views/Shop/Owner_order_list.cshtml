@model IEnumerable<IdentityDemo.ViewModels.OrderViewModel>
@{
    Layout = "_Owner_layout";
    int counter=1;
}

@section Scripts {
    <link rel="stylesheet" href="~/css/download_css/5_2_3_bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/download_css/4_5_3_bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/download_css/1_10_24_jquery.dataTables.min.css" />
    <!-- jQuery -->
    <script src="~/js/download_js/3_5_1_jquery.min.js"></script>
    <!-- DataTables JS -->
    <script type="text/javascript" src="~/js/download_js/1_10_24_jquery.dataTables.min.js"></script>
    <link href="~/css/download_css/sb_1_7_1_datatables.min.css" rel="stylesheet" />
    <script src="~/js/download_js/sb_1_7_1_datatables.min.js"></script>
    <script src="~/js/download_js/5_2_3_bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#ordertable').DataTable();
        });
        
        let currentOrderId;

        function setOrderId(orderId) {
            currentOrderId = orderId;
        }

        document.getElementById('confirmDeleteButton').addEventListener('click', function () {
            document.getElementById('deleteOrderForm-' + currentOrderId).submit();
        });

    </script>
}
<div>
    <h1 class="">Order List</h1>
        <table id="ordertable" class="display" style="width:100%;">
            <thead>

                <tr style="text-align: center;">
                    <th style ="text-align:center;">No.</thstyle>
                    <th style="text-align:center;">Date</th>
                    <th style="text-align:center;">Price</th>
                    <th style="text-align:center;">Customer</th>
                    <th style="text-align:center;">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var order in Model)
                {
                    <tr style="text-align: center;">

                        <td style="text-align:center;">@counter</td>
                        <td style="text-align:center;">@order.OrderDate</td>
                        <td style="text-align:center;">@order.OrderPrice</td>
                        <td style="text-align:center;">@order.User_Name</td>
                        <td style="text-align:center;">
                            <form id="deleteOrderForm-@order.OrderID" asp-action="DeleteOrder" asp-controller="Order" method="post">
                                <input type="hidden" name="orderid" value="@order.OrderID" />
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" onclick="setOrderId('@order.OrderID')">
                                    <i class="fas fa-trash sm pr-1"></i> Delete
                                </button>
                            </form>
                        </td>

                    </tr>
                    counter += 1;
                }

            </tbody>
        </table>
</div>

<!-- Modal for delete Confirmation -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this order?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>